@using MudBlazor

<PageTitle>Overview | Shift Framework | Home</PageTitle>

<MudContainer Class="mt-15">
    <MudText Style="color: #f8ca4d" Typo="Typo.h2" Inline><b>Shift </b></MudText>
    <MudText Color="Color.Default" Typo="Typo.h2" Inline>Framework</MudText>

    <MudText Inline="false">
        A Full-Stack, Enterprise-Ready Web Development Framework
    </MudText>
</MudContainer>

<MudContainer Class="mt-15">
